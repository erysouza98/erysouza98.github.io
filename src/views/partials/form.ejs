<html>
<head>
    <link rel="stylesheet" href="https://erysouza98.github.io/src/public/stylesheets.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
    <script type="text/javascript">
        (function() {
            // https://dashboard.emailjs.com/admin/account
            emailjs.init('-fc3Scxlo0NC3Dr3F');
        })();
    </script>
     <script type="text/javascript">
        window.onload = function() {
            document.getElementById('contact-form').addEventListener('submit', function(event) {
                event.preventDefault();
                this.to_name.value = 'Erika'
                emailjs.sendForm('service_yhwnahf', 'template_gi65y7c', this)
                    .then(function() {
                        console.log('SUCCESS!');
                        
                            document.getElementById("response").classList
                            .remove("d-none");
                        
                    }, function(error) {
                        console.log('FAILED...', error);
                    });
            });
        }
    </script>
</head>
<body>
<div class="align-items-center" id="myForm">
    <form id="contact-form">
        <!-- my name (Erika) -->
        <input type="hidden" name="to_name"  id="to_name">
<div class="row">
        <!-- requester name  -->
        <div class="form-group col-6">
        <label class="mb-2"><i class="fa fa-smile-o"></i> Name:</label>
        <input type="text" class="form-control" name="from_name"  id="from_name">
        </div>
        <!-- requester email -->
    
        <div class="form-group col-6">
        <label class="mb-2"><i class="fa fa-at"></i> Email:</label>
        <input type="email"  class="form-control" name="user_email">
        </div>         
    </div>  
        <!-- requester body email -->
        <div class="form-group">
        <label class="mb-2"><i class="fa fa-envelope-o"></i> Message:</label>
        <textarea class="form-control" name="message" rows="3"></textarea>
        </div>
        <input class="mt-3 sendForm" type="submit" value="Send">
        <div  id="response" class="alert alert-success mt-2 d-none" role="alert">
            Your Email has been sent! :) Thank you!
          </div>
    </form>

</div>
</body>
</html>